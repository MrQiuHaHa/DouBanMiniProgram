/* pages/home/home.wxss */

.search-wrapper {
    background-color: #42BD55;
    padding: 15rpx;
}

.search {
    background-color: white;
    border-radius: 10rpx;
    height: 45rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 15rpx;
}

.search image {
    width: 32rpx;
    height: 32rpx;
    margin-right: 10rpx;
}


.title-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 25rpx 15rpx;
    font-size: 32rpx;
}

.title-wrapper .title {
    color: #494949;
    font-weight: bold;
}

.title-wrapper .more {
    color: #0db019;
    display: flex;
    align-items: center;
}

.title-wrapper .arrow {
    width: 14rpx;
    height: 14rpx;
    border-right: 4rpx solid #0db019;
    border-bottom: 4rpx solid #0db019;
    transform: rotate(-45deg);
}

.items {
    display: flex;
    overflow-x: auto;
    margin: 0 7.5rpx;

}
/* 隐藏scroll滚动条 */
::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.item {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 0 7.5rpx;
    width: 210rpx;
    
}

.item .photo {
    width: 100%;
    height: 301rpx;
    margin-bottom: 15rpx;
}

.item .title {
    font-size: 30rpx;
    font-weight: bold;
    width: 95%;
    overflow: hidden;
    text-overflow: ellipsis;/*省略号*/
    text-align: center;
    white-space: nowrap;
}

.score {
    display: flex;
    align-items: center;
    color: #818181;
}

.score .stars {
    display: flex;
    margin-right: 4rpx;
}

.stars .star {
    width: 32rpx;
    height: 32rpx;
}

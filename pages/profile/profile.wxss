/* pages/profile/profile.wxss */

.nav-bar {
    position: sticky;
    top: 0;
    z-index: 99;
}

page {
    height: 100%;
}

.container {
    font-size: 28rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
}

.login-wrapper {
    /* background-color: red; */
    height: 400rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
}

.login-wrapper .bg {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: -1;
}

.login-wrapper .login {
    color: #1E4826;
    background-color: white;
    border-radius: 50rpx;
    text-align: center;
    font-size: 50rpx;
    height: 100rpx;
    line-height: 100rpx;
    width: 300rpx;
    box-shadow: 2rpx 2rpx 10rpx 0 rgba(0, 0, 0, 0.3);
}

.version {

    /* position: absolute;
    bottom: 40rpx; */
    color: #C9C9C9;
    font-size: 24rpx;
    /* width: 100%; */
    text-align: center;
    margin-top: 30rpx;
    margin-bottom: 40rpx;
}

.items-wrapper {
    /* margin-top: 30rpx; */
    flex-grow: 1;
}

.title-wrapper {
    margin-top: 20rpx;
    padding-left: 30rpx;
    padding-right: 40rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.title-wrapper .title {
    font-size: 40rpx;
    font-weight: bold;
}

.title-wrapper .view {
    color: #838383;
    display: flex;
    align-items: center;
}

.items-wrapper .arrow {
    width: 20rpx;
    height: 20rpx;
    border-right: 4rpx solid #7F7F7F;
    border-bottom: 4rpx solid #7F7F7F;
    transform: rotate(-45deg);
}

.item {
    display: flex;
    align-items: center;
    padding-left: 30rpx;
    padding-right: 20rpx;
    margin-top: 20rpx;
}

.item .icon {
    width: 118rpx;
    height: 98rpx;
    margin-right: 30rpx;
}

.info-wrapper {
    width: 100%;
}
.info-wrapper .info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-right: 20rpx;
}

.info .left .top {
    font-size: 30rpx;
}

.info .left .bottom {
    display: flex;
    margin-top: 7rpx;
    color: #818181;
    align-items: flex-end;
}

.info .left .bottom .count {
    font-size: 60rpx;
    margin-right: 10rpx;
}

.info .left .bottom .text {
    margin-bottom: 15rpx;
}

.info .right {
    display: flex;
    align-items: center;
}

.info .right .text {
    color: #C1C1C1;
    margin-right: 25rpx;
}

.info .right .begin {
    color: #4a4a4a;
    background-color: #f5f5f5;
    border-radius: 10rpx;
    padding: 10rpx 15rpx;
}

.item .devider {
    width: 100%;
    height: 2rpx;
    background-color: rgba(0, 0, 0, 0.1);
    margin-top: 15rpx;
}
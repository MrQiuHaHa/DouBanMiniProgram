/* cmps/movie-item/movie-item.wxss */

.item {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 210rpx;
    
}

.item .photo {
    width: 210rpx;
    height: 301rpx;
    margin-bottom: 15rpx;
    border-radius: 10rpx;
    border: 4rpx solid #f2f2f2;
}

.item .title {
    font-size: 30rpx;
    font-weight: bold;
    width: 95%;
    overflow: hidden;
    text-overflow: ellipsis;/*省略号*/
    text-align: center;
    white-space: nowrap;
}

.item .tips {
    font-size: 25rpx;
    display: flex;
    align-items: center;
    color: #818181;
}

.score {
    display: flex;
    align-items: center;
    color: #818181;
    font-size: 25rpx;
}

.score .stars {
    display: flex;
    margin-right: 4rpx;
}

.stars .star {
    width: 24rpx;
    height: 24rpx;
}